<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/44b0b2927e.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1>
        <i class="fa-solid fa-address-book"></i>
        Contact List</h1>
        <div id="contact-container">
        <ul>
            <% for (let i of contact_list){ %>
                
                <li>
                    <div id ="contact-area">
                   <p> <%= i.name %></p>
                   <p> <%= i.phone_num %></p>
                    </div>
                    <div class="delete-btn">
                        <a href="/delete-contact/?id=<%= i._id%>">
                            <i class="fa-sharp fa-solid fa-circle-xmark"></i>
                        </a>

                    </div>
                </li>
                
            <% } %>
        </ul>
        </div>

        <form action="/create-contact" method="post">
            <input type="text" name="name" placeholder="enter your name" required>
            <input type="number" name="phone_num" placeholder="enter your number" required>

            <button type="submit">ADD CONTACT</button>



        </form>




        <script type="text/javascript" src="/js/home.js" ></script>
    </body>
</html>
